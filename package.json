{
  "name": "@m-ld/gateway",
  "version": "0.1.0-edge.0",
  "description": "m-ld gateway for services",
  "type": "module",
  "main": "ext/index.js",
  "types": "ext/index.d.ts",
  "files": [
    "_site",
    "ext"
  ],
  "scripts": {
    "start": "node ext/start.js",
    "clean": "rm -rf ext",
    "build": "tsc && npx @11ty/eleventy",
    "ver": "echo $npm_package_version",
    "dev": "tsc --watch",
    "doc-dev": "npx @11ty/eleventy --serve",
    "test": "node --experimental-vm-modules node_modules/.bin/jest --silent",
    "predocker": "cp package.json package-lock.json deploy && cd deploy && npm pack ..",
    "deploy-fly": "npm run predocker && cd deploy && fly deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/m-ld/m-ld-gateway.git"
  },
  "keywords": [
    "m-ld"
  ],
  "author": "George Svarovsky <george@m-ld.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/m-ld/m-ld-gateway/issues"
  },
  "homepage": "https://gw.m-ld.org/",
  "devDependencies": {
    "@11ty/eleventy-plugin-syntaxhighlight": "^5.0.0",
    "@faker-js/faker": "^8.0.2",
    "@flydotio/dockerfile": "^0.3.3",
    "@m-ld/io-js-build": "^0.1.1",
    "@m-ld/io-web-build": "^0.2.0-0",
    "@m-ld/m-ld-test": "^0.1.1-edge.3",
    "@orangeopensource/hurl": "^4.0.0",
    "@types/jest": "^29.2.4",
    "@types/node-fetch-cache": "^3.0.0",
    "jest": "^29.3.1",
    "jest-mock-extended": "^3.0.1",
    "memory-level": "^1.0.0",
    "node-fetch-cache": "^3.1.3",
    "supertest": "^6.3.1",
    "tmp": "^0.2.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@m-ld/io-web-runtime": "^0.2.3",
    "@m-ld/m-ld": "^0.10.0-edge.7",
    "@types/cryptr": "^4.0.1",
    "@types/jsonwebtoken": "^9.0.2",
    "@types/lru-cache": "^5.1.1",
    "@types/nodemailer": "^6.4.7",
    "@types/restify": "^8.5.5",
    "@types/restify-errors": "^4.3.4",
    "@types/supertest": "^2.0.12",
    "@types/tmp": "^0.2.3",
    "@types/yargs": "^17.0.13",
    "ably": "^1.2.33",
    "abstract-level": "^1.0.3",
    "classic-level": "^1.2.0",
    "cryptr": "^6.1.0",
    "dotenv": "^16.0.3",
    "env-paths": "^3.0.0",
    "http-graceful-shutdown": "^3.1.11",
    "joi": "^17.9.2",
    "jsonwebtoken": "^9.0.1",
    "liquidjs": "^10.8.4",
    "loglevel": "^1.8.1",
    "lru-cache": "^6.0.0",
    "nodemailer": "^6.9.0",
    "reflect-metadata": "^0.1.13",
    "restify": "^11.0.0",
    "restify-errors": "^8.0.2",
    "rx-flowable": "^0.1.2",
    "rxjs": "^7.5.7",
    "simple-peer": "^9.11.1",
    "socket.io": "^4.5.3",
    "socket.io-client": "^4.5.3",
    "yargs": "^17.6.2"
  },
  "jest": {
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/test/"
    ],
    "testMatch": [
      "<rootDir>/test/**/*.test.ts"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)?$": [
        "ts-jest",
        {
          "tsconfig": "test/tsconfig.json",
          "useESM": true
        }
      ]
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1",
      "@m-ld/m-ld/ext/socket.io/server": "<rootDir>/node_modules/@m-ld/m-ld/ext/socket.io/server/index.js"
    },
    "setupFilesAfterEnv": [
      "<rootDir>/test/setup.ts"
    ]
  }
}
