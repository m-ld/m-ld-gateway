{
  "name": "m-ld-gateway",
  "version": "0.0.0",
  "description": "m-ld gateway for services",
  "type": "module",
  "main": "ext/index.js",
  "types": "ext/index.d.ts",
  "scripts": {
    "start": "tsc --incremental && node ext/start.js",
    "clean": "rm -rf ext",
    "build": "npm run clean && tsc && npm run test",
    "test": "jest --silent"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/m-ld/m-ld-gateway.git"
  },
  "keywords": [
    "m-ld"
  ],
  "author": "George Svarovsky <george@m-ld.io>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/m-ld/m-ld-gateway/issues"
  },
  "homepage": "https://github.com/m-ld/m-ld-gateway#readme",
  "devDependencies": {
    "@types/jest": "^29.2.4",
    "@types/restify": "^8.5.5",
    "@types/restify-errors": "^4.3.4",
    "@types/supertest": "^2.0.12",
    "@types/tmp": "^0.2.3",
    "@types/validator": "^13.7.10",
    "@types/yargs": "^17.0.13",
    "jest": "^29.3.1",
    "jtd": "^0.1.1",
    "memory-level": "^1.0.0",
    "supertest": "^6.3.1",
    "tmp": "^0.2.1",
    "ts-jest": "^29.0.3",
    "typescript": "^4.9.3"
  },
  "dependencies": {
    "@m-ld/io-web-runtime": "^0.2.2",
    "@m-ld/m-ld": "^0.9.1",
    "ably": "^1.2.33",
    "abstract-level": "^1.0.3",
    "classic-level": "^1.2.0",
    "dotenv": "^16.0.3",
    "env-paths": "^3.0.0",
    "http-graceful-shutdown": "^3.1.11",
    "jsonwebtoken": "^8.5.1",
    "jtd": "^0.1.1",
    "loglevel": "^1.8.1",
    "restify": "^8.6.1",
    "restify-errors": "^8.0.2",
    "rx-flowable": "^0.1.2",
    "rxjs": "^7.5.7",
    "simple-peer": "^9.11.1",
    "socket.io": "^4.5.3",
    "socket.io-client": "^4.5.3",
    "validator": "^13.7.0",
    "yargs": "^17.6.2"
  },
  "jest": {
    "roots": [
      "<rootDir>/src/",
      "<rootDir>/test/"
    ],
    "testMatch": [
      "<rootDir>/test/**/*.test.ts"
    ],
    "extensionsToTreatAsEsm": [
      ".ts"
    ],
    "transform": {
      "^.+\\.(ts|tsx)?$": [
        "ts-jest",
        {
          "tsconfig": "test/tsconfig.json",
          "useESM": true
        }
      ]
    },
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1",
      "@m-ld/m-ld/ext/socket.io/server": "<rootDir>/node_modules/@m-ld/m-ld/ext/socket.io/server/index.js"
    }
  }
}
